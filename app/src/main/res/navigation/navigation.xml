<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="org.d3ifcool.aplikasihitung.MainFragment"
        android:label="Home"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_menuSatuFragment"
            app:destination="@id/menuSatuFragment" />
        <action
            android:id="@+id/action_mainFragment_to_menuDuaFragment"
            app:destination="@id/menuDuaFragment" />
        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuSatuFragment"
        android:name="org.d3ifcool.aplikasihitung.MenuSatuFragment"
        android:label="Menu Satu"
        tools:layout="@layout/fragment_menu_satu" />
    <fragment
        android:id="@+id/menuDuaFragment"
        android:name="org.d3ifcool.aplikasihitung.MenuDuaFragment"
        android:label="Menu Dua"
        tools:layout="@layout/fragment_menu_dua" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3ifcool.aplikasihitung.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
</navigation>